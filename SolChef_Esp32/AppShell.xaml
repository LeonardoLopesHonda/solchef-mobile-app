<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SolChef_Esp32.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SolChef_Esp32"
    xmlns:views="clr-namespace:SolChef_Esp32.Views"
    FlyoutBehavior="Flyout"
    Title="SolChef_Esp32">

    <FlyoutItem Title="Dashboard" Icon="dashboard-blk.png">
        <ShellContent ContentTemplate="{DataTemplate views:DashboardPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Network" Icon="wifi-blk.png">
        <ShellContent ContentTemplate="{DataTemplate views:NetworkPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Settings" Icon="settings-blk.svg">
        <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" />
    </FlyoutItem>
</Shell>
